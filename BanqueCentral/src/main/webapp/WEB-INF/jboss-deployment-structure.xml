<?xml version="1.0" encoding="UTF-8"?>
<jboss-deployment-structure>
    <deployment>
        <!-- Dépendances pour EJB remote -->
        <dependencies>
            <!-- Module EJB client -->
            <module name="org.jboss.ejb-client" services="export"/>
            
            <!-- Module remote naming -->
            <module name="org.jboss.as.naming"/>
            
            <!-- Module XNIO -->
            <module name="org.jboss.xnio"/>
            
            <!-- Module marshalling pour sérialisation -->
            <module name="org.jboss.marshalling"/>
            
            <!-- Module logging -->
            <module name="org.jboss.logging"/>
        </dependencies>
    </deployment>
</jboss-deployment-structure>