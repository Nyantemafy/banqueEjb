<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <jboss-ejb-client xmlns="urn:jboss:wildfly-client-ejb:3.0">
        <client-context>

            <ejb-receivers>
                <remoting-ejb-receiver
                        outbound-connection-ref="change-conn"
                        reconnect-attempts="10"/>
            </ejb-receivers>

            <connections>
                <connection name="change-conn"
                            endpoint="client-endpoint"
                            uri="remote+http://localhost:8081">
                    <authentication>
                        <mechanism mechanism-name="DIGEST-MD5">
                            <credential username="ejbuser" password="ejbpass"/>
                        </mechanism>
                    </authentication>
                </connection>
            </connections>

        </client-context>
    </jboss-ejb-client>
</configuration>
