<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">
    
    <!-- Unité de persistance = configuration de la base -->
    <persistence-unit name="compteCourantPU" transaction-type="JTA">
        
        <!-- Dire quelles classes sont des tables -->
        <class>com.banque.comptecourant.entity.CompteCourant</class>
        <class>com.banque.comptecourant.model.Transaction</class>
        
        <properties>
            <!-- Base de données H2 en mémoire pour tests -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect"/>
            <property name="hibernate.hbm2ddl.auto" value="create-drop"/>
            <property name="hibernate.show_sql" value="true"/>  <!-- Afficher les requêtes SQL -->
        </properties>
        
    </persistence-unit>
</persistence>