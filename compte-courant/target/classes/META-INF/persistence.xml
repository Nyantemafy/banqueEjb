<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="compteCourantPU" transaction-type="JTA">
        <jta-data-source>java:jboss/datasources/BanqueDS</jta-data-source>

        <class>com.banque.comptecourant.entity.CompteCourant</class>
        <class>com.banque.comptecourant.model.Transaction</class>

        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
        </properties>
    </persistence-unit>

</persistence>
