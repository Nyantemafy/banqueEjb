{
    "ConnectionStrings": {
        "DefaultConnection": "Server=(localdb)\\MSSQLLocalDB;Database=BanqueCompteDepot;Trusted_Connection=True;MultipleActiveResultSets=true",
        "ProductionConnection": "Server=localhost;Database=BanqueCompteDepot;User Id=banque_user;Password=banque_pass;MultipleActiveResultSets=true"
    },
    
    "CompteDepot": {
        "TauxInteretDefaut": 2.5,
        "DureeDefautEnMois": 12,
        "FraisOperationDefaut": 2.00,
        "AutoCalculerInterets": true,
        "PeriodeCalculInteretsEnJours": 30
    },
    
    "LimitesRetrait": {
        "PourcentageLimiteMensuelle": 0.10,
        "PourcentageLimiteAnnuelle": 0.50,
        "ActiverLimites": true,
        "MontantMaximumRetrait": 50000.00
    },
    
    "WcfService": {
        "HttpEndpointUrl": "http://localhost:8081/CompteDepot",
        "TcpEndpointUrl": "net.tcp://localhost:8082/CompteDepot",
        "MetadataUrl": "http://localhost:8081/CompteDepot/mex",
        "MaxReceivedMessageSize": 1048576,
        "EnableHttps": false
    },
    
    "Logging": {
        "LogLevel": {
        "Default": "Information",
        "Microsoft": "Warning",
        "Microsoft.EntityFrameworkCore": "Information",
        "CompteDepot": "Debug"
        },
        "Console": {
        "IncludeScopes": true,
        "TimestampFormat": "[yyyy-MM-dd HH:mm:ss] "
        },
        "FilePath": "logs/comptedepot.log"
    }
}